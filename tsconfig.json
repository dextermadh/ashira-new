{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "components/Footer.tsx", "components/preloader/anim.js", "components/Footer/Footer.jsx", "components/ProjectCard/projectCard.tsx", "app/collaborate/components/form.jsx", "app/graduate-collection/portfolio/components/carousel.tsx", "app/neuromagination/components/Description/index.tsx", "app/graduate-collection/gallery/gallery.tsx", "components/Breadcrumbs/breadcrumbs.jsx"],
  "exclude": ["node_modules"]
}
